// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  orders Order[]
}

model Order {
  id           Int    @id @default(autoincrement())
  userId       Int
  user         User   @relation(fields: [userId], references: [id])

  // Статус заказа как строка
  status       String @default("PENDING") // DRAFT, PENDING, CONFIRMED, CANCELLED, COMPLETED

  // Тип услуги как строка
  serviceType  String // BURIAL, CREMATION и т.п.

  // Итоговая сумма
  totalAmount  Int

  // Весь заказ как строка (JSON в виде текста)
meta         String
}
 