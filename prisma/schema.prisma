generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  orders Order[]
}

model Order {
  id          Int    @id @default(autoincrement())
  userId      Int
  user        User   @relation(fields: [userId], references: [id])

  status      String @default("PENDING") // DRAFT, PENDING, CONFIRMED, CANCELLED, COMPLETED
  serviceType String
  totalAmount Int
  meta        String

  payments    Payment[]
}

model Payment {
  id                String   @id @default(cuid())
  provider          String
  providerPaymentId String   @unique

  orderId           Int
  order             Order    @relation(fields: [orderId], references: [id])

  amount            Int
  currency          String   @default("RUB")
  status            String
  confirmationUrl   String?

  createRaw         Json?
  webhookRaw        Json?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([orderId])
}
