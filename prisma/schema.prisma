// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  orders Order[]
}

model Order {
  id          Int      @id @default(autoincrement())

  // внешний id для фронта/платежки/эмулятора
  publicId    String   @unique

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  status      String   @default("PENDING") // PENDING|PAID|CANCELED...
  serviceType String
  totalAmount Int      // копейки
  meta        String

  // связи с Payment: по внутреннему id и по publicId (вторая — чтобы Prisma не ругался, если ты её используешь)
  payments            Payment[] @relation("OrderById")
  paymentsByPublicId  Payment[] @relation("OrderByPublicId")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Payment {
  id                String   @id @default(cuid())
  provider          String
  providerPaymentId String   @unique

  // FK на Order.id (Int)
  orderId           Int
  order             Order    @relation("OrderById", fields: [orderId], references: [id], onDelete: Cascade)

  // внешний id заказа (string) + связь по publicId
  orderPublicId     String
  orderByPublicId   Order    @relation("OrderByPublicId", fields: [orderPublicId], references: [publicId], onDelete: Cascade)

  amount            Int
  currency          String   @default("RUB")
  status            String   // pending|succeeded|canceled|failed
  confirmationUrl   String?
  createRaw         String?
  webhookRaw        String?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([orderId])
  @@index([orderPublicId])
}
